{{!< default}}
{{#post}}
<header class="regular post"
	{{#if image}}
	style="background-image: url({{image}});"
	{{else}}
		{{#if @blog.cover}}
		style="background-image: url({{@blog.cover}});"
		{{else}}
		style="background-image: url('{{asset "images/cover.jpg"}}');"
		{{/if}}
	{{/if}}
>
	{{> nav-container}}

	<div class="title-container">
		<h1 class="post-title">{{title}}</h1>
		<h3 class="post-meta">Posted on <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="D MMMM YYYY"}}</time></h3>
		<h3 class="post-meta">by {{author}}</h3>

		{{#if tags}}
		<div class="tags">
			<i class="fa fa-tags" aria-hidden="true"> {{tags}}</i>
		</div>
		{{/if}}

	</div>
</header>

<main>
	<div class="post-content">{{content}}</div>
	<div class="back-to-top">
		<a class="fa-2x" href="#">
	<i class="fa fa-angle-double-up" aria-hidden="true"></i>
</a>
</div>
	<div class="post-footer">

		<div class="share">
			<a class="icon-twitter" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                <i class="fa fa-qq" aria-hidden="true"></i>
            </a>
            <a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                <i class="fa fa-weibo" aria-hidden="true"></i>
            </a>
            <a class="icon-google-plus" href="https://plus.google.com/share?url={{url absolute="true"}}" onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                <i class="fa fa-google-plus"></i>
            </a>
		</div>



	</div>

	<div>

		{{#next_post}}
			<a rel="next" href="{{url}}"><i class="fa fa-backward" aria-hidden="true"></i>{{title}} â†’</a>
		{{/next_post}}

	  {{#prev_post}}
			<a class="fa-2x" rel="prev" href="{{url}}">{{title}}<i class="fa fa-forward" aria-hidden="true"></i></a>
		{{/prev_post}}

	</div>
	{{> comment}}



</main>
{{/post}}
